extends layout

block content
	link(rel='stylesheet', href='/stylesheets/reg.css')
	div.logins
		div.mwidth
			div.logreg_box
				a(href="/login").dd 登录
				a(href="javascript:;").zz 注册
				div.login_box
					form.form
						div.box
							span.sj
							input(type="text" placeholder="请输入手机号码").username
						div.box
							span.pass
							input(type="password" placeholder="请输入密码(6~20字符)").password
						div.anniu
							input(type="checkbox").women
							span 记住我
							span.wangji 忘记密码
